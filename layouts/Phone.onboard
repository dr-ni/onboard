<keyboard
    id="Phone"
    format="3.2"
    section="system"
    summary="Mobile keyboard for small screens" >

  <include file="key_defs.xml"/>

  <!-- box containing all the keys and buttons -->
  <!-- the rows of keys on the Onboard keyboard are counted bottom to top starting with 1 -->
