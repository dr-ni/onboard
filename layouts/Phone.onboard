          </panel>
        </panel>

        <panel>
          <panel filename="Phone-Alpha.svg">
            <!-- row 1 of the layer -->
            <key group="bottomrow" id="layer1.like_rtrn" label="12!@"/>
            <key group="alphanumeric" id="AA01" char="," label="," unlatch_layer="false"/>
